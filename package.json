    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.2",
    "wrangler": "^4.51.0"
  },
  "lint-staged": {
    "**/*.{jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write --ignore-path .prettierignore"
    ]
  }
