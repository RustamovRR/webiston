{
  "name": "web-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port 9999",
    "build": "next build",
    "postbuild": "node scripts/update-tools-list.js && next-sitemap && node scripts/build-search-index.js",
    "update-tools": "node scripts/update-tools-list.js",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{json,js,ts,tsx,css}\"",
    "prepare": "husky",
    "pages:build": "npx @cloudflare/next-on-pages",
    "pages:dev": "npx wrangler pages dev .vercel/output/static --compatibility-date=2024-12-02",
    "pages:deploy": "npm run pages:build && npx wrangler pages deploy .vercel/output/static"
  },
